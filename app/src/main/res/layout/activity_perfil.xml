<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tituloPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Perfil"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/voltar"
        app:layout_constraintStart_toEndOf="@id/voltar"
        app:layout_constraintTop_toTopOf="@id/voltar" />

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/imagem_arredondada"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/foto_padrao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voltar" />


    <ImageView
        android:id="@+id/btnEditarFoto"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_editar_foto"
        app:layout_constraintStart_toEndOf="@id/fotoPerfil"
        app:layout_constraintTop_toBottomOf="@id/voltar" />


    <TextView
        android:id="@+id/nomeTopo"
        android:layout_width="236dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="12dp"
        android:text="Nome Usuário"
        android:textColor="#141414"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoPerfil"
        app:layout_constraintTop_toTopOf="@id/fotoPerfil" />

    <TextView
        android:id="@+id/empresaTopo"
        android:layout_width="239dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="12dp"
        android:text="Empresa"
        android:textColor="#141414"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoPerfil"
        app:layout_constraintTop_toBottomOf="@id/nomeTopo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoPerfil">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="713dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/lblInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Informações"
                android:textColor="#141414"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iconNome"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_account_outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Nome Usuário"
                    android:textColor="#141414"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/actionsNome"
                    app:layout_constraintStart_toEndOf="@id/iconNome"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNome"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Digite seu nome"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintEnd_toStartOf="@id/actionsNome"
                    app:layout_constraintStart_toEndOf="@id/iconNome"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#21B558"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#21B558">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/actionsNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btnEditNome"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pencil_outline" />

                    <ImageView
                        android:id="@+id/btnCancelNome"
                        android:layout_width="26dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/ic_fechar"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnOkNome"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iconTelefone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_telefone_outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTelefone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="11999999999"
                    android:textColor="#141414"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/actionsTelefone"
                    app:layout_constraintStart_toEndOf="@id/iconTelefone"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelefone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Digite seu telefone"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintEnd_toStartOf="@id/actionsTelefone"
                    app:layout_constraintStart_toEndOf="@id/iconTelefone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#21B558"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#21B558">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTelefone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/actionsTelefone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btnEditTelefone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pencil_outline" />

                    <ImageView
                        android:id="@+id/btnCancelTelefone"
                        android:layout_width="26dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/ic_fechar"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnOkTelefone"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iconEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email_outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="usuario@gmail.com"
                    android:textColor="#141414"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/actionsEmail"
                    app:layout_constraintStart_toEndOf="@id/iconEmail"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Digite seu e-mail"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintEnd_toStartOf="@id/actionsEmail"
                    app:layout_constraintStart_toEndOf="@id/iconEmail"
                    app:layout_constraintTop_toTopOf="parent"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#21B558"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#21B558">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/actionsEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btnEditEmail"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pencil_outline" />

                    <ImageView
                        android:id="@+id/btnCancelEmail"
                        android:layout_width="26dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/ic_fechar"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnOkEmail"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/lblOutras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Outras opções"
                android:textColor="#141414"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iconSenha"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_password_outline"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSenha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Alterar senha"
                    android:textColor="#141414"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/actionsSenha"
                    app:layout_constraintStart_toEndOf="@id/iconSenha"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSenha"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:hint="Digite sua nova senha"
                    android:visibility="gone"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintEnd_toStartOf="@id/actionsSenha"
                    app:layout_constraintStart_toEndOf="@id/iconSenha"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#21B558"
                    app:boxStrokeWidth="1dp"
                    app:hintTextColor="#21B558">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/actionsSenha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btnEditSenha"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_pencil_outline" />

                    <ImageView
                        android:id="@+id/btnCancelSenha"
                        android:layout_width="26dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="26dp"
                        android:src="@drawable/ic_fechar"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btnOkSenha"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Overlay de carregamento -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:layout_gravity="center">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Carregando..."
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
