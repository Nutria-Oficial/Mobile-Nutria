<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".ui.Scanner.ResultadoFragment">

    <!-- Linha superior: botão de voltar + título (sem Toolbar) -->
    <ImageView
        android:id="@+id/voltar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Processo inverso"
        android:textColor="#0B0B0B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/voltar"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Cartão principal -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeTopRoundedBottomSquare16">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvPorcao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Porção aproximada do ingrediente"
                android:textAlignment="center"
                android:textColor="#5A5A5A"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- BLOCO COM BORDA PRETA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBlocoTabela"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvPorcao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardUseCompatPadding="false"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"
                app:cardBackgroundColor="#FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Cabeçalho dentro da borda -->
                    <TextView
                        android:id="@+id/tvTabelaTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabela Nutricional"
                        android:textColor="#0B0B0B"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_semibold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPorcaoColuna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Porção 300g"
                        android:textColor="#5A5A5A"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/tvTabelaTitulo"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/dividerHeader"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#000000"
                        app:layout_constraintTop_toBottomOf="@id/tvTabelaTitulo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Tabela corrigida: 3 colunas com pesos e alinhamentos -->
                    <TableLayout
                        android:id="@+id/tableNutri"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:stretchColumns="0,1,2"
                        android:shrinkColumns="0,1,2"
                        app:layout_constraintTop_toBottomOf="@id/dividerHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <!-- Cabeçalho -->
                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Item" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Valor" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="%VD*" />
                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0" />

                        <!-- Linhas -->
                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Valor energético" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="120kcal" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Açúcares totais" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="3%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Açúcares adicionados" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="3g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="4%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Proteínas" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="12g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="5%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Gorduras totais" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="12g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="6%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Gorduras saturadas" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="3g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="9%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Gorduras trans" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="9%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Fibra alimentar" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2g" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="7%" />
                        </TableRow>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                        <TableRow android:padding="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="Sódio" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="2mg" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="7%" />
                        </TableRow>
                    </TableLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
