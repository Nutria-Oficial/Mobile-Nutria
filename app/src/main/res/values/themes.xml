<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Nutria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">#EE7026</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>

        <item name="android:statusBarColor">@color/white</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ========================================================== -->
    <!-- ESTILOS ADICIONADOS PARA OS DETALHES NUTRICIONAIS NO XML -->
    <!-- ========================================================== -->

    <!-- Estilo para o LinearLayout de cada detalhe nutricional (Linha) -->
    <style name="NutrientDetailRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <!-- Estilo para o TextView do Nome do Nutriente (coluna esquerda) -->
    <style name="NutrientNameText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Estilo para o TextView do Valor do Nutriente (coluna direita) -->
    <style name="NutrientValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
